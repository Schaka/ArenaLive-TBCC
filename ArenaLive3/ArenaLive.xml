<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

	<Script File="localisation.lua" />
	<Script File="localisation_deDE.lua" />
	<Script File="localisation_esES.lua" />
	
	<Include File="Fonts.xml" />
	<Frame name="ArenaLive" setAllPoints="true" parent="UIParent">
		<Frames>
			<Button name="$parentVerticalLine" frameStrata="TOOLTIP">
				<Size>
					<AbsDimension x="2" y="1" />
				</Size>
				<Anchors>
					<Anchor point="CENTER" />
				</Anchors>
				<Layers>
					<Layer level="Background">
						<Texture name="$parentTexure">
							<Color r="0" g="1" b="0"/>
						</Texture>
					</Layer>
				</Layers>
			</Button>
			<Button name="$parentHorizontalLine" frameStrata="TOOLTIP">
				<Size>
					<AbsDimension x="1" y="2" />
				</Size>
				<Anchors>
					<Anchor point="CENTER" />
				</Anchors>
				<Layers>
					<Layer level="Background">
						<Texture name="$parentTexure">
							<Color r="0" g="1" b="0"/>
						</Texture>
					</Layer>
				</Layers>
			</Button>
		</Frames>
	</Frame>

